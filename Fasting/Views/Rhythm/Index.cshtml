@model IEnumerable<Fasting.Models.Rhythm>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ratio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Achieved)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ratio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                <input id="AchievedCheck" type="checkbox" value="@item.Achieved" />
                <button id="AchievedFast" type="button" class="btn btn-primary" disabled>Save</button>
                @*@Html.DisplayFor(modelItem => item.Achieved)*@
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    const achieveCheck = document.getElementById("AchievedCheck");
    const achieveButton = document.getElementById("AchievedFast");
    achieveCheck.addEventListener('click', e => {
        achieveButton.disabled = !achieveButton.disabled;
    });
    console.log('hi');
</script>